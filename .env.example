# Sample environment file
# Copy this to .env and fill in your actual values

# OPNsense API base URL
API_BASE_URL=https://your-opnsense-instance.com

# OPNsense API credentials (Basic Auth)
# API_KEY is the API key
API_KEY=your-api-key
# API_SECRET is the API secret
API_SECRET=your-api-secret

# Check interval in seconds
CHECK_INTERVAL=60

# Docker Image (for production use with pre-built images)
DOCKER_IMAGE=curiohokiest2e/opnsense-vpn-monitor:latest